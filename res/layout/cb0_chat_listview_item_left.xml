<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/cb0ChatListviewNameLeft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textSize="10sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb0ChatListviewNameLeft" >

        <ImageView
            android:id="@+id/cb0ChatListviewAvatarLeft"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="3sp"
            android:src="@drawable/avatar_default" />

        <RelativeLayout
            android:id="@+id/cb0ChatListviewRlLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@id/cb0ChatListviewAvatarLeft"
            android:background="@drawable/cb0_chat_left" >

            <TextView
                android:id="@+id/cb0ChatListviewMsgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="220dp"
                android:textSize="17sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tvTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_below="@id/cb0ChatListviewRlLeft"
            android:layout_toRightOf="@id/cb0ChatListviewAvatarLeft"
            android:text="This is translate msg"
            android:maxWidth="220dp"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>