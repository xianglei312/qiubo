<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:background="@drawable/elad_bg">
	<LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="40dip" 
	  android:background="@drawable/elad_top">
  		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:gravity="center|center_vertical"
			android:textSize="20dip" 
			android:textStyle="bold" 
			android:textColor="@color/white"
			android:layout_marginTop="7dip" 
			android:text="@string/main_qa"/>
	</LinearLayout>
	<LinearLayout
	  android:orientation="vertical" android:gravity="bottom"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_weight="1">
		<RelativeLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
			<RelativeLayout android:id="@+id/admain_relativeLayout_shang" android:gravity="center"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<Button android:id="@+id/elad_q"
					android:layout_width="130dip" 
					android:layout_height="130dip"
					android:background="@drawable/elad_q"
					android:text="@string/main_q"
					android:textColor="@color/white"
					android:textSize="17dip"
					android:gravity="bottom"
					android:paddingLeft="32dip"
					android:paddingBottom="8dip"/>
				<Button android:id="@+id/elad_a"
					android:layout_width="130dip" 
					android:layout_height="130dip"
					android:background="@drawable/elad_a" 
					android:layout_toRightOf="@+id/elad_q"
					android:layout_marginLeft="40dip"
					android:text="@string/main_a"
					android:textColor="@color/white"
					android:textSize="17dip"
					android:gravity="bottom"
					android:paddingLeft="32dip"
					android:paddingBottom="5dip"/>
			</RelativeLayout>
			<ImageView android:scaleType="fitStart"
				android:layout_width="fill_parent" android:layout_height="70dip"
				android:src="@drawable/elad_wood" android:layout_below="@+id/admain_relativeLayout_shang"
				/>
		</RelativeLayout>	
	</LinearLayout>
		<LinearLayout
	  android:orientation="vertical" android:gravity="center_horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_weight="1">
		</LinearLayout>
</LinearLayout>

