<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/cb0ChatListviewNameRight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="name" 
        android:textSize="10sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb0ChatListviewNameRight" >

        <ImageView
            android:id="@+id/cb0ChatListviewAvatarRight"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3sp"
            android:src="@drawable/avatar_default" />

        <RelativeLayout
            android:id="@+id/cb0ChatListviewRlRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_toLeftOf="@+id/cb0ChatListviewAvatarRight"
            android:background="@drawable/cb0_chat_right" >

            <TextView
                android:id="@+id/cb0ChatListviewMsgRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:maxWidth="160dp"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>