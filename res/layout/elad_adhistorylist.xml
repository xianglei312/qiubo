<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="70dip" android:gravity="center_vertical"
	android:background="@drawable/elad_listview_item_bg">
	<ImageView android:id="@+id/pointtab_adhistory_img"
		android:layout_width="90dip" android:layout_height="70dip"
		android:paddingTop="5dip" android:paddingLeft="5dip"
		android:paddingBottom="5dip" android:scaleType="fitXY" />
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:id="@+id/pointtab_adhistory_title" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="10dip" android:paddingRight="20dip" android:paddingTop="5dip"
			android:singleLine="true" android:textSize="16dip" android:textStyle="bold"
			android:textColor="@color/dark_blue" />
 		<TextView android:id="@+id/pointtab_adhistory_type" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="10dip" android:paddingRight="20dip"
			android:layout_below="@id/pointtab_adhistory_title" android:singleLine="true"
			android:textSize="14dip" android:textColor="@color/dim_gray" /> 
		<TextView android:id="@+id/pointtab_adhistory_point" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="10dip" android:paddingRight="20dip"
			android:layout_below="@id/pointtab_adhistory_type" android:singleLine="true"
			android:textSize="14dip"  android:textColor="@color/crimson" />
		<TextView android:id="@+id/pointtab_adhistory_pointa" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="10dip" android:paddingRight="20dip" android:layout_alignTop="@id/pointtab_adhistory_point"
			android:layout_toRightOf="@id/pointtab_adhistory_point" android:singleLine="true"
			android:textSize="14dip" android:textColor="@color/dim_gray" />
	</RelativeLayout>
</LinearLayout>
