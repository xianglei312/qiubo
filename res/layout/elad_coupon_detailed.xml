<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@color/bground">
	<LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="40dip" 
	  android:background="@drawable/elad_top">
  		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:gravity="center|center_vertical"
			android:textSize="20dip" 
			android:textStyle="bold" 
			android:textColor="@color/white"
			android:layout_marginTop="7dip" 
			android:id="@+id/servicetab_coupon_detailed_title"/>
	</LinearLayout>

	<ImageView android:src="@android:drawable/alert_light_frame"
		android:layout_marginTop="5dip" android:layout_height="300dip"
		android:layout_width="320dip" android:id="@+id/servicetab_coupon_detailed_pic"
		android:layout_gravity="center" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center|center_vertical"
		android:textSize="20dip" android:textStyle="bold" 
		android:layout_marginTop="10dip" android:id="@+id/servicetab_coupon_detailed_content" />
</LinearLayout>
