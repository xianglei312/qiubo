<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bottom_boarder"
    android:minHeight="70dip"
    android:orientation="horizontal"
    android:paddingBottom="10dip" >

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="25dip"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/download_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/download_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/download_title_text"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/download_title_text"
            android:text="@string/downloaded" />

        <TextView
            android:id="@+id/download_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/download_title_text"
            android:layout_marginLeft="5dip"
            android:text="@string/downloaded" />

        <TextView
            android:id="@+id/download_url_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/download_info_text"
            android:layout_marginLeft="5dip"
            android:text="@string/downloaded" />
    </RelativeLayout>

    <Button
        android:id="@+id/download_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:text="@string/download"
        android:textSize="14sp" />

</LinearLayout>